echo "*************************************************************"
echo "Updating system to allow user modification"
mkdir -p /opt/custom/smf
mkdir -p /opt/custom/method

curl --silent -k https://raw.github.com/sax/vagrant-smartos-packager/master/files/install-gz-files -o /opt/custom/method/install-gz-files
curl --silent -k https://raw.github.com/sax/vagrant-smartos-packager/master/files/install-gz-files.xml -o /opt/custom/smf/install-gz-files.xml

curl --silent -k https://raw.github.com/sax/vagrant-smartos-packager/master/files/persist-gz-files -o /opt/custom/method/persist-gz-files
curl --silent -k https://raw.github.com/sax/vagrant-smartos-packager/master/files/persist-gz-files.xml -o /opt/custom/smf/persist-gz-files.xml

chmod -R +x /opt/custom/method

svccfg import /opt/custom/smf/install-gz-files.xml
svccfg import /opt/custom/smf/persist-gz-files.xml

echo "*************************************************************"
echo "In order to use tools such as usermod, please do the following:"
echo "  svcadm disable -s persist-userfiles"
echo "  useradd ..."
echo "  svcadm enable -s persist-userfiles"
echo
echo
echo "*************************************************************"
echo "Now reboot to ensure that everything is kosher."
